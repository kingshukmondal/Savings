<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_40sdp"
        app:cardElevation="@dimen/_2sdp"
        app:cardMaxElevation="@dimen/_10sdp"
        android:layout_marginVertical="@dimen/_60sdp"
        android:alpha="0.9"
        android:layout_marginHorizontal="@dimen/_20sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Details"
            android:gravity="center"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            android:textColor="#FFAB00"
            android:layout_marginTop="@dimen/_10sdp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:background="#FFAB00"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:shapeAppearance="@style/Cut"
            android:hint="Details">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            app:shapeAppearance="@style/Cut"
            android:hint="Amount">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:inputType="number"
                android:maxLength="10"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:layout_marginHorizontal="@dimen/_25sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_25sdp"
            android:textColor="#88FF6D00"/>

        <RadioGroup
            android:id="@+id/groupradio"
            android:layout_marginHorizontal="@dimen/_39sdp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id1"
                android:text="Online"
                android:checked="true"
                android:buttonTint="#AEEA00"
                android:textSize="20sp"/>

            <RadioButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/radia_id2"
                android:text="Cash"
                android:buttonTint="#AEEA00"
                android:textSize="20sp"/>
        </RadioGroup>




        <DatePicker
            android:id="@+id/datePicker1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:datePickerMode="spinner"
            android:layout_gravity="center"

            android:calendarViewShown="false"/>



        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:textColor="#000"
            android:text="Submit"
            android:gravity="center"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:background="@drawable/round_shape1"
            android:backgroundTint="#FFAB00"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginHorizontal="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"/>











    </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>